<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:id="@+id/LinearLayout"
    android:background="@drawable/fondo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Calculadora"
        android:id="@+id/textCalcu"
        android:layout_gravity="center_horizontal"
        android:textSize="40dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNumA"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:hint="Introduce un Número"
        android:phoneNumber="true"
        android:background="#ffcdcdcd" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNumB"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:hint="Introduce un Número"
        android:phoneNumber="true"
        android:background="#ffcdcdcd" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="1">

        <Button
            style="@style/Button"
            android:text="+"
            android:id="@+id/btnPlus"
            android:background="@drawable/btnsum"
            android:layout_marginLeft="50dp" />

        <Button
            style="@style/Button"
            android:text="-"
            android:id="@+id/btnMin"
            android:background="@drawable/btnres"
            android:layout_marginLeft="50dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:id="@+id/btnClean"
            android:layout_marginLeft="15dp"
            android:background="@drawable/btnclean" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            style="@style/Button"
            android:text="*"
            android:id="@+id/btnMul"
            android:background="@drawable/btnmul" />

        <Button
            style="@style/Button"
            android:text="/"
            android:id="@+id/btnDiv"
            android:background="@drawable/btndiv" />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:id="@+id/imageButton"
            android:layout_marginLeft="15dp"
            android:background="@drawable/janitor2" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Resultado:"
        android:id="@+id/lblResult"
        android:textSize="30dp"
        android:textStyle="italic"
        android:layout_marginTop="30dp" />

</LinearLayout>
